MODULE main
	int x;
	int y;
	int k;
	int j;
	int i;
	int n;
	int m;

	assume(x+y == k);
	assume(m == 0);
	assume(j == 0);

	while(j < n){
		if(j == i){
			x = x + 1;
			y = y - 1;
		}
		else{
			x = x - 1;
			y = y + 1;
		}

		if(*){
			m = j;
		}
		else{
			skip;
		}

		j = j + 1;
	}

	assert(x + y == k);
	assert((n <= 0) || (0 <= m));
	assert((n <= 0) || (m <= n));
	

END MODULE
